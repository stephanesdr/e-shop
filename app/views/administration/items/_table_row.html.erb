	<div class="card card-admin my-3">
		<div class="table-responsive">
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>ID</th>
						<th>Produit</th>
						<th>Prix de départ</th>
						<th>Réduction</th>
						<th>Remise</th>
						<th>Nouveau Prix</th>
						<th>Description</th>
						<th>Catégories</th>
						<th>Edition</th>
						<th>Supression</th>
					</tr>
				</thead>
				<tbody>
					<%@items.each do |item| %>
					<tr>
						<td><%= item.id%></td>
						<td><%= link_to(item.name, home_item_path(item.id)) %></td>
						<td><%= item.price%> €</td>
						<td><%= item.discount ? "Oui" : "Non" %></td>
						<td><%= item.percentage_discount%> %</td>
						<td><%= item.reduced_price%> €</td>
						<td><%= item.description%></td>
						<td><% item.categories.each do|cat| %>
							<%=cat.name %>
							<%end%>
						</td>
						<td><%= link_to "EDITER" %></td>
						<td><%= link_to "SUPPRIMER", administration_item_path(item.id), :method => :delete,  data: { confirm: 'Etes-vous sûr de vouloir supprimer ce produit de votre stock ?' } %>
						</td>
					</tr>
					<% end%>
				</tbody>
			</table>

		</div>
	</div>
