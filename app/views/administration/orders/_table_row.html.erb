<div class="card card-admin my-3">
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Date</th>
          <th>Stripe_customer_ID</th>
          <th>Client</th>
          <th>Articles</th>
          <th>Total</th>
          <th>Etiquette Postale</th>
          <th>Facture</th>
          <th>Statut</th>
          <th>Edition</th>
        </tr>
      </thead>
      <tbody>
        <%@orders.order('id ASC').each do |order| %>
        <tr>
          <td>
            <%= link_to order.id ,administration_order_path(order.id)%>
          </td>
          <td><%= order.created_at.asctime%></td>
          <td><%= order.stripe_customer_id %></td>
          <td><%= order.user.email%> </td>
          <td>
            <% order.items.each do |itm|%>
            <%=itm.name%>
            <% end%>
          </td>
          <td><%= order.items.sum("price")%> € </td>
          <td><%= link_to "DOWNLOAD PDF", administration_order_postal_sticker_path(order.id, format: :pdf) %></td>
          <td><%= link_to "DOWNLOAD PDF", home_order_invoice_path(order.id, format: :pdf) %></td>
          <td>
            <%= if order.status == 'initiated' then 'Initiée' end %>
            <%= if order.status == 'shipped' then 'Expédiée' end %>
            <%= if order.status == 'delivered' then 'Livrée' end %>
          </td>
          <td><%= link_to "Editer", administration_order_path(order.id) %></td>
        </tr>
        <% end%>
      </tbody>
    </table>

  </div>
</div>
